directory="data"
while getopts ":d:t:i:r:f:o:h:" opt; do
  case $opt in
    d) directory="$OPTARG"
    ;;
    t) threshold="$OPTARG"
    ;;
    i) collection_id="$OPTARG"
    ;;
    r) collection_uri="$OPTARG"
    ;;
    f) timemap_file="$OPTARG"
    ;;
    o) output_file="$OPTARG"
    ;;
    h) html_output=1
    ;;
    \?) echo "Invalid option -$OPTARG" >&2
    ;;
  esac
done

#for collection; do true; done

if [ -z $threshold ]; then
	threshold="0.15"
fi

